{
	"AWSTemplateFormatVersion" : "2010-09-09",

	"Description" : "AWS Sample Template to create a stack with an EC2 instance of the user's choice and installing and configuring mysql database on the same",

	"Parameters": {

		"KeyName": {
			"Description": 		"Use existing KeyPair for enabling the SSH Connection to the EC2",
			"Type" : 			"AWS::EC2::KeyPair::KeyName"
		},

		"DatabaseName" : {
			"Default": 			"SampleDatab",
			"Description" : 	"Uses MySQL",
			"Type" : 			"String",
			"MinLength": 		"1"
		},

		"DBUser": {
			"NoEcho":			"true",
			"Description" : 	"Username",
			"Type" : 			"String",
			"MinLength" : 		"1"
		},

		"DBPassword" : {
			"NoEcho" : 			"true",
			"Description" : 	"Password for the MySQL Database",
			"Type": 			"String",
			"MinLength" : 		"1"
		},

		"DBRootPassword": {
		    "NoEcho": 			"true",
		    "Description" : 	"Root password for MySQL",
		    "Type": 			"String",
		    "MinLength": 		"1"
		},

		"InstanceType": {

			"Description" : "EC2 Instance Type",
			"Type" : "String",
			"Default" : "t2.micro",
			"AllowedValues" : [ "t2.small", "t2.nano","t2.medium","t2.large","t2.micro"]
		},

		"SSHLocation" : {
			"Description" : "IP Address Range for SSH to the EC2",
			"Type" : "String",
			"MinLength" : "1",
			"Default": "0.0.0.0/0",
			"ConstraintDescription" : "Should be a valid IP CIDR (x.x.x.x/x)"
		}
	},

	"Mappings" : {
		
		"AWSInstanceType2Arch": {

			"t2.small" : {
				"Arch" : "HVM64"
			},
			"t2.nano" : {
				"Arch" : "HVM64"
			},
			"t2.medium" : {
				"Arch" : "HVM64"
			},
			"t2.large" : {
				"Arch" : "HVM64"
			},
			"t2.micro" : {
				"Arch" : "HVM64"  
			}
		},
		
		"AWSInstanceType2NATArch" : {
      		"t1.micro"  : {
      			"Arch" : "NATPV64"   
      		},
      		"t2.nano"   : {
      			"Arch" : "NATHVM64"  
      		},
      		"t2.micro"  : {
      			"Arch" : "NATHVM64"  
      		},
      		"t2.small"  : {
      			"Arch" : "NATHVM64"  
      		},
      		"t2.medium" : {
      			"Arch" : "NATHVM64"  
      		},
      		"t2.large"  : {
      			"Arch" : "NATHVM64"  
      		}
      	},
		"AWSRegionArch2AMI" : {
			"us-east-1" : 
			{
				"PV64" : "ami-2a69aa47",
				"HVM64" : "ami-97785bed",
				"HVMG2" : "ami-0a6e3770"},
	      	"us-west-2" : 
	      	{
	      		"PV64" : "ami-7f77b31f",
	      		"HVM64" : "ami-f2d3638a",
	      		"HVMG2" : "ami-ee15a196"},
	      	"us-east-2" : {
	      		"PV64"  : "NOT_SUPPORTED", 
	      		"HVM64" : "ami-f63b1193",
	      		"HVMG2" : "NOT_SUPPORTED"},
	      	"us-west-1" : 
	      	{
	      		"PV64" : "ami-a2490dc2",
	      		"HVM64" : "ami-824c4ee2",
	      		"HVMG2" : "ami-0da4a46d"}
		}
	},


	"Resources" : {
		"WebServerInstance":{

			"Type": "AWS::EC2::Instance",
			
			"Metadata": {
					
				"AWS::Cloudinformation::Init" :{

					"configsets" : {
						"InstallAndRun" : ["Install"]
					},
					"Install" : {
			            "packages" : {
				              "yum" : {
				                "httpd"        : []
			            	   }
			        	}
			        
					}
				}
			},
			"Properties": {
				"ImageId" : { "Fn::FindInMap" : [
												 "AWSRegionArch2AMI", { "Ref" : "AWS::Region" 
												 					  },
	                  												  { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ]
	                  												  } 
	                  							] 
							},
				"InstanceType"   : { "Ref" : "InstanceType" },
				"SecurityGroups" : [ {"Ref" : "WebServerSecurityGroup"} ],
				"KeyName"        : { "Ref" : "KeyName" },
				"UserData"       : {
									"Fn::Base64" : { "Fn::Join" : ["", [
						     			"#!/bin/bash -xe\n",
						     			"yum update -y aws-cfn-bootstrap\n",

						     			"# Install the files and packages from the metadata\n",
						     			"/opt/aws/bin/cfn-init -v ",
						     			"         --stack ", { "Ref" : "AWS::StackName" },
						     			"         --resource WebServerInstance ",
						     			"         --configsets InstallAndRun ",
						     			"         --region ", { "Ref" : "AWS::Region" }, "\n",
							
						     			"# Signal the status from cfn-init\n",
						     			"/opt/aws/bin/cfn-signal -e $? ",
						     			"         --stack ", { "Ref" : "AWS::StackName" },
						     			"         --resource WebServerInstance ",
						     			"         --region ", { "Ref" : "AWS::Region" }, "\n"
									]]}
				}        
			}
		},
		"WebServerSecurityGroup" : {
		    "Type" : "AWS::EC2::SecurityGroup",
		    "Properties" : {
						        "GroupDescription" : "Enable HTTP access via port 80",
						        "SecurityGroupIngress" : [
							        {"IpProtocol" : "tcp", "FromPort" : "80", "ToPort" : "80", "CidrIp" : "0.0.0.0/0"},
							        {"IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "SSHLocation"}}
						        ]
		    }      
		}
	},
	"Outputs" : {
	    "WebsiteURL" : {
		    "Description" : "URL for newly created LAMP stack",
		    "Value" : { "Fn::Join" : ["", ["http://", { "Fn::GetAtt" : [ "WebServerInstance", "PublicDnsName" ]}]] }
	    }
	}
}
